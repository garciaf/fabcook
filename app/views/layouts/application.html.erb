<!DOCTYPE html>
<html>
<head>
  <% if content_for?(:title) %>
    <title><%= yield(:title) %></title>
  <% else %>
    <title>Fabcook</title>
  <% end %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-wrapper">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="<%= url_for home_path %>">Fabcook</a>
        <div class="nav-collapse collapse navbar-responsive-collapse">
          <ul class="nav">
            <li>
            <%= link_to home_path do %>
              <i class="icon-home icon-2x"></i>
            <%- end %>
            </li>
          </ul>
        </div>
        <%= render :partial => "blog/search" %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Languages <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to locale: "en" do %>
              <i class= "my-icons-flag-usa"></i>English
              <%- end %>
            </li>
            <li><%= link_to locale: "fr" do %>
              <i class= "my-icons-flag-france"></i>Fran√ßais
              <%- end %>
            </li>
            </ul>
          </li> 
        <% if user_signed_in? %>
          <li><%= link_to "admin", posts_path %></li>
          <li><%= link_to "logout", destroy_user_session_path, :method => :delete  %></li>
        <% else %>
          <li><%= link_to "login", new_user_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <%= render :partial => 'layouts/notification' %>
    <% if content_for?(:breadcrumb) %>
        <ul class="breadcrumb">
          <%= yield(:breadcrumb) %>
        </ul>
    <% end %>

  <div class="row">
      <div class="span9"><%= yield %></div>
      <div class="span3">
        <%= yield(:side) %></div>
    </div>
  </div>
<footer class="footer">

</footer>
<%= javascript_include_tag "application" %>
<%= yield(:javascript) %>
<script type="text/javascript">
  $('.dropdown-toggle').dropdown()
</script>
</body>
</html>
