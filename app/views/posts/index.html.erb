<div class="jumbotron admin">

<h1>Listing posts</h1>
</div>
<div class="container">
<table class="table">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th>Actions</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= truncate post.content, :lenght => 20 %></td>
    <td> 
      <a href="<%= url_for post %>" class="btn"><i class="icon-eye-open"></i></a>
      <a href="<%= url_for edit_post_path(post) %>" class="btn btn-success"><i class="icon-edit"></i></a>
      <a href="<%= url_for post %>" class="btn btn-danger" data-confirm="Are you sure?" data-method="delete" rel="nofollow"><i class="icon-trash"></i></a>
    </td>
  </tr>
<% end %>
</table>
<div class="digg_pagination">
  <%= will_paginate @posts %>
</div>
<br />

<%= link_to 'New Post', new_post_path, :class => "btn btn-success" %>
</div>