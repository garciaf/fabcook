<p id="notice"><%= notice %></p>
<div class="row">

<h1><%= @post.title %></h1>
<p><%= raw markdown(@post.content) %></p>
</div>

<%= @post.name %>
<div class="row">
  <%= join_tags(@post) %>
</div>
<div class="row">
<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>

