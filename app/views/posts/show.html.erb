<div class="jumbotron admin">
  <h1><%= @post.title %></h1>
</div>  
<div class="container">
<div class="span12">
<div class="row">
  <p id="notice"><%= notice %></p>
  <%= raw markdown(@post.content) %>
</div>

<%= @post.name %>
<div class="row">
  <%= render :partial => 'tags/tag', :collection => @post.tags %>
</div>
<div class="row">
  <h2>Comments</h2>
  <ul class="media-list">
    <%= render @post.comments %>
  </ul>

  <h2>Photos</h2>
    <ul class="media-list">
      <%= render @post.photos %>
    </ul>

  <h2>Add a Picture:</h2>
    <%= render "photos/form" %>
  </div>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
</div>